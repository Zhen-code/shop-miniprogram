page{
    background-color: #cccccc;
}
.login-wrap{
    width: 100%;
    height: 45vh;
    background: crimson;
    overflow: hidden;
}
.login-wrap button{
    margin-left: 50%;
    margin-top: 10%;
}
.infoWrap{
    position: relative;
    width: 100%;
    height: 45vh;
}
.backavatar{
    width: 100%;
    height: 45vh;
    filter: 10rpx;
}
.avatar-name{
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 30%;
    text-align: center;
}
.avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.username{
    color: white;
}
.content-wrap{
    position: relative;
    height: 50vh;
}
.content-wrap-top{
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: -60rpx;
    width: 90%;
    padding: 10rpx;
    background-color: white;
    display: flex;
}
.content-wrap-top navigator{
    flex: 1;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
}
.content-wrap-top navigator view:first-child{
    color: crimson;
}
.content-wrap-bottom{
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 10%;
    background-color: #fff;
    height: 130rpx;
    width: 90%;
}
.content-wrap-bottom-title{
    border-bottom: 2rpx solid #ccc;
    height: 50rpx;
    font-size: 24rpx;
    padding: 10rpx;
}
.content-wrap-bottom-content{
    display: flex;
}
.content-wrap-bottom-content navigator{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 6rpx;
}
.content-wrap-bottom-content navigator .iconfont{
    color: crimson;
}
.order-text{
    font-size: 24rpx;
}
.address-wrap{
    height: 90rpx;
    width: 90%;
    background-color: #ffffff;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 40%;
    font-size: 24rpx;
    display: flex;
    align-items: center;
}
.contract-wrap{
    position: absolute;
    width: 90%;
    background-color: #ffffff;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 60%;
}
.contract-wrap-item{
    height: 90rpx;
    width: 100%;
    font-size: 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #ccc;
    padding: 0 10rpx;
}
.contract-wrap-item .contract{
    display: flex;
    justify-content: space-between;
    align-items: center;
}